@using OnlineShop.DataAccess
@using OnlineShop.Extentions
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Cart Page";
    Dictionary<int, OnlineShop.Controllers.CartElement> cart = HttpContextAccessor.HttpContext.Session.Get<Dictionary<int, OnlineShop.Controllers.CartElement>>("cart");
    decimal? total = 0;
}

<div class="container">
    <section class="h-100 h-custom" style="background-color: #eee;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                    <div class="card">
                        <div class="card-body p-4">

                            <div class="row">

                                <div class="col-lg-7">
                                    <h5 class="mb-3">
                                        <a href="CilentPage.jsp" class="text-body">
                                            <i class="fas fa-long-arrow-alt-left me-2"></i>Continue shopping
                                        </a>
                                    </h5>
                                    <hr>

                                    <div class="d-flex justify-content-between align-items-center mb-4">
                                        <div>
                                            <p class="mb-1">Shopping cart</p>
                                            <p class="mb-0">You have @cart.Count() items in your cart</p>
                                        </div>
                                    </div>

                                    @foreach (KeyValuePair<int, OnlineShop.Controllers.CartElement> x in cart)
                                    {
                                        @(total = total + x.Value.Price * x.Value.Quantity)
                                        <div class="card mb-3">
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between">
                                                    <div class="d-flex flex-row align-items-center">
                                                        <div>
                                                            <img src="@x.Value.Thumbnail" class="img-fluid rounded-3" alt="Shopping item" style="width: 65px;">
                                                        </div>
                                                        <div class="ms-3">
                                                            <h5>@x.Value.ProductName</h5>
                                                            <p class="small mb-0">@x.Value.Color , @x.Value.Size</p>
                                                        </div>
                                                    </div>
                                                    <div class="d-flex flex-row align-items-center">
                                                        <div style="width: 50px;">

                                                            <h5 class="fw-normal mb-0">@x.Value.Quantity</h5>

                                                        </div>
                                                        <div style="width: 80px;">
                                                            <h5 class="mb-0">@string.Format("{0:N0}", @x.Value.Price) VNĐ</h5>
                                                        </div>
                                                        <a href="DelCart?id" style="color: #cecece;"><i class="fas fa-trash-alt"></i></a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <div class="col-lg-5">
                                    <div class="card bg-primary text-white rounded-3">
                                        <div class="card-body">
                                            <hr class="my-4">
                                            <div class="d-flex justify-content-between mb-4">
                                                <p class="mb-2">Total(Incl. taxes)</p>
                                                <p class="mb-2">@string.Format("{0:N0}", @total) VNĐ</p>
                                            </div>
                                            <a href="#">
                                                <button type="button" class="btn btn-info btn-block btn-lg">
                                                    <div class="d-flex justify-content-between">
                                                        <span></span>
                                                        <span>Checkout <i class="fas fa-long-arrow-alt-right ms-2"></i></span>
                                                    </div>
                                                </button>
                                            </a>
                                        </div>
                                    </div>

                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>