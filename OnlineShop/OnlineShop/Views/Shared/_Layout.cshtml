                        {
                            <li><a href="@Url.Action("Index", "Home")" class="sub-menu-item">Trang chủ</a></li>
                            <li class="has-submenu parent-menu-item">
                                <a href="javascript:void(0)">Sản phẩm</a><span class="menu-arrow"></span>
                                <ul class="submenu">
                                    <li><a href="/Product/ProductList" class="sub-menu-item">Cửa hàng</a></li>
                                </ul>
                            </li>

                            <li class="has-submenu parent-menu-item">
                                <a href="javascript:void(0)">Đơn hàng</a><span class="menu-arrow"></span>
