                            <strong style="font-size: 14px">
                                <strong style="font-family: monospace">
                                    <a href="@Url.Action("Index", "Login")" style="color: white">Đăng nhập</a>
                                </strong>
                            </strong>
                        </strong>
                    </span>

                </ul>
                <ul class="dropdowns list-inline mb-0">
                    <span class="">
                        <strong style="color: #000">
                            <strong style="font-size: 14px">
                                <strong style="font-family: monospace">
                                    <a href="@Url.Action("Index", "Register")" style="color: black">Đăng ký</a>
                                </strong>
                            </strong>
                        </strong>
                    </span>

                </ul>
            }

            <!-- Start Dropdown -->

            <div id="navigation">
                <!-- Navigation Menu-->
                <ul class="navigation-menu nav-left">
                    @{
                        if (Model != null && Model.RoleName.Trim() == "Admin")
                        {
                            <li class="has-submenu parent-menu-item">
                                <a href="javascript:void(0)">Sản phẩm</a><span class="menu-arrow"></span>
                                <ul class="submenu">
                                    <li><a href="/Product/ProductList" class="sub-menu-item">Cửa hàng</a></li>
                                </ul>
                            </li>

                            <li class="has-submenu parent-menu-item">
                                <a href="javascript:void(0)">Đơn hàng</a><span class="menu-arrow"></span>
                                <ul class="submenu">
                                    <li><a asp-controller="Cart" asp-action="ListCartItems" class="sub-menu-item">Giỏ hàng của tôi</a></li>
                                    <li><a href="#" class="sub-menu-item">Đơn hàng của tôi</a></li>
                                </ul>
                            </li>

                            <li class="has-submenu parent-menu-item">
                                <a href="javascript:void(0)">Quản lý</a><span class="menu-arrow"></span>
                                <ul class="submenu">
                                    <li><a href="@Url.Action("Index", "ManagerUser")" class="sub-menu-item">Quản lý tài khoản</a></li>
