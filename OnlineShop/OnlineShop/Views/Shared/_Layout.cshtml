                                    <a class="dropdown-item d-flex align-items-center text-dark" href="Profile">
                                        <img src="@Url.Content("~/Avatars/" + Model.Avatar)" class="avatar avatar-md-sm rounded-circle border shadow" alt="">
                                        <div class="flex-1 ms-2">
                                            <span class="d-block mb-1">@Model.FullName</span>
                                            <small class="text-muted">@Model.RoleName</small>
                                        </div>
                                    </a>
                                    <a class="dropdown-item text-dark" href="@Url.Action("Index", "Profile")"><span class="mb-0 d-inline-block me-1"><i class="uil uil-setting align-middle h6"></i></span> Cài đặt hồ sơ</a>
                                    <a class="dropdown-item text-dark" href="#"><span class="mb-0 d-inline-block me-1"><i class="uil uil-bill align-middle h6"></i></span> Đơn hàng của tôi</a>
                                    <div class="dropdown-divider border-top"></div>
                                    <a class="dropdown-item text-dark" href="@Url.Action("Index", "Manager")"><span class="mb-0 d-inline-block me-1"><i class="uil uil-clipboard-notes align-middle h6"></i></span> Quản lý sản phẩm</a>
                                    <a class="dropdown-item text-dark" href="#"><span class="mb-0 d-inline-block me-1"><i class="uil uil-clipboard-notes align-middle h6"></i></span> Quản lý hóa đơn</a>
                                    <div class="dropdown-divider border-top"></div>
                                    <a class="dropdown-item text-dark" href="@Url.Action("Index", "Logout")"><span class="mb-0 d-inline-block me-1"><i class="uil uil-sign-out-alt align-middle h6"></i></span> Đăng xuất</a>
